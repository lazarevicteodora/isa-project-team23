<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3
        http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <persistence directory="isa-project/cache" />

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <!-- Keš za thumbnail slike -->
    <cache alias="thumbnails">
        <!-- Tip ključa (videoId je Long) -->
        <key-type>java.lang.Long</key-type>

        <!-- Tip vrednosti (byte[] za slike) -->
        <value-type>[B</value-type>

        <!-- Expiry - kada se thumbnail briše iz keša -->
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>

        <!-- Resursi - max 50 thumbnail-a u RAM-u -->
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>

    <!-- Cache za komentare -->
    <cache alias="video_comments" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>org.springframework.data.domain.Page</value-type>
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap>100</heap>
        </resources>
    </cache>

</config>